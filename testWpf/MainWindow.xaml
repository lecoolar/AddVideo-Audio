<Window x:Class="testWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <MediaElement x:Name="video" HorizontalAlignment="Left" Height="300" Margin="259,10,0,0" VerticalAlignment="Top" Width="300" LoadedBehavior="Manual" MediaEnded="video_MediaEnded"/>
        <Button x:Name="ShooseFile" Content="Выбор файла" HorizontalAlignment="Left" Margin="245,383,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Slider x:Name="volume" HorizontalAlignment="Left" Margin="529,322,0,0" VerticalAlignment="Top" Width="120" ValueChanged="Slider_ValueChanged" Maximum="1" RenderTransformOrigin="0.4,-1.109"/>
        <Button x:Name="Restart" Content="Заново" HorizontalAlignment="Left" Margin="342,321,0,0" VerticalAlignment="Top" Click="Restart_Click"/>
        <Button x:Name="Play" Content="Старт/Пауза" HorizontalAlignment="Left" Margin="245,322,0,0" VerticalAlignment="Top" Click="Play_Click"/>
        <Label x:Name="sound" Content="Звук" HorizontalAlignment="Left" Margin="451,319,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.309,0.196"/>

    </Grid>
</Window>
